---
import { getCollection } from 'astro:content';

// Layout import — provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from '../layouts/BaseLayout.astro';

// Component Imports
import CallToAction from '../components/CallToAction.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import Pill from '../components/Pill.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import { Icon } from 'astro-icon';

// Page section components
import ContactCTA from '../components/ContactCTA.astro';
import Skills from '../components/Skills.astro';
import WhyWebsite from '../components/WhyWebsite.astro';
import LoadAnimation from '../components/LoadAnimation.astro';

// Content Fetching: List four most recent work projects
const projects = (await getCollection('work'))
	.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
	.slice(0, 4);

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<BaseLayout>
	<LoadAnimation></LoadAnimation>
	<div class="landing-page">
		<!-- Hero Section -->
		<section class="hero-wrapper">
			<div class="wrapper">
				<header class="hero">
					<Hero
						title="Bienvenue,\nmon nom est\nBenjamin Melinette."
						tagline="Spécialisé dans les sites vitrines pour restaurants, commerces et artisans.\n Je vous aide à renforcer votre présence en ligne et à attirer plus de clients."
						align="start"
					>
						<div class="roles">
							<Pill><Icon name="mdi:food-fork-drink" size="1.33em" /> Restaurants</Pill>
							<Pill><Icon name="mdi:web" size="1.33em" /> Sites vitrines</Pill>
							<Pill><Icon name="mdi:storefront" size="1.33em" /> Commerces locaux</Pill>
						</div>
						<CallToAction href="mailto:benjamin.melinette@gmail.com">
							Contacter-moi
							<Icon name="ph:paper-plane-tilt" size="1.2em"/>
						</CallToAction>
					</Hero>

					<img
						alt="Benjamin Melinette Portrait"
						width="480"
						height="620"
						src="/Portfolio/assets/portrait.jpg"
					/>
				</header>
			</div>
		</section>

		<!-- Skills Section -->
		<section class="skills-wrapper">
			<div class="wrapper">
				<Skills />
			</div>
		</section>

		<!-- Projects Section -->
		<section class="projects-section">
			<div class="wrapper">
				<header class="section-header">
					<h2>Projets récents</h2>
					<p>Découvrez quelques-uns des sites web que j'ai créés pour mes clients.</p>
				</header>

				<div class="gallery">
					<Grid variant="offset">
						{
							projects.map((project) => (
								<li>
									<PortfolioPreview project={project} />
								</li>
							))
						}
					</Grid>
				</div>

				<div class="cta-center">
					<CallToAction href="./work/">
						Voir tous les projets
						<Icon name="mdi:arrow-right" size="1.2em" />
					</CallToAction>
				</div>
			</div>
		</section>

		<!-- Why Website Section -->
		<section class="why-wrapper">
			<WhyWebsite />
		</section>

		<!-- Contact CTA -->
		<ContactCTA />
	</div>
</BaseLayout>

<style>
	/* ====================================================== */
	/* STRUCTURE GÉNÉRALE */
	/* ====================================================== */
	
	.landing-page {
		width: 100%;
	}

	.wrapper {
		width: 90%;
		max-width: 1400px;
		margin: 0 auto;
	}

	/* Espacement cohérent entre les sections */
	.hero-wrapper,
	.skills-wrapper,
	.projects-section,
	.why-wrapper {
		padding-block: 3rem;
	}

	@media (min-width: 768px) {
		.hero-wrapper,
		.skills-wrapper,
		.projects-section,
		.why-wrapper {
			padding-block: 4rem;
		}
	}

	@media (min-width: 1024px) {
		.hero-wrapper {
			padding-block: 5rem 4rem;
		}
		
		.skills-wrapper,
		.projects-section,
		.why-wrapper {
			padding-block: 4rem;
		}
	}

	/* ====================================================== */
	/* HERO SECTION */
	/* ====================================================== */

	.hero {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		gap: 1.75rem;
		padding-inline: 1rem;
	}

	.hero img {
		width: 90%;
		max-width: 320px;
		aspect-ratio: 3 / 4;
		object-fit: cover;
		object-position: top;
		border-radius: 1.25rem;
		box-shadow: var(--shadow-md);
		margin-top: 1.5rem;
	}

	.roles {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 0.5rem;
		margin-block: 1.5rem 2rem;
	}

	.roles > * {
		flex: 1 1 auto;
		min-width: 110px;
		text-align: center;
	}

	.hero :global(h1),
	.hero :global(h2),
	.hero :global(h3) {
		font-size: clamp(2rem, 4vw + 0.5rem, 3.5rem);
		line-height: 1.15;
	}

	.hero :global(p) {
		font-size: clamp(1rem, 1.3vw + 0.5rem, 1.4rem);
		line-height: 1.6;
		color: var(--gray-400);
	}

	@media (min-width: 40em) {
		.hero {
			display: grid;
			grid-template-columns: 5fr 4fr;
			align-items: center;
			text-align: left;
			gap: 2.5rem;
			padding-inline: 2rem;
		}

		.roles {
			justify-content: flex-start;
			margin-inline: 0;
		}

		.hero img {
			max-width: 400px;
			border-radius: 2rem;
		}
	}

	@media (min-width: 65em) {
		.hero {
			grid-template-columns: 6fr 4fr;
			gap: 3.75rem;
			padding-inline: 3rem;
		}

		.hero img {
			max-width: 460px;
			border-radius: 3rem;
		}
	}

	/* ====================================================== */
	/* PROJECTS SECTION */
	/* ====================================================== */

	.projects-section {
		background: var(--gradient-subtle);
		border-top: 1px solid var(--gray-800);
		border-bottom: 1px solid var(--gray-800);
	}

	.section-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.section-header h2 {
		font-size: clamp(2rem, 5vw, 3rem);
		color: var(--gray-0);
		margin-bottom: 1rem;
	}

	.section-header p {
		font-size: clamp(1rem, 2.5vw, 1.25rem);
		color: var(--gray-200);
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
	}

	.gallery {
		margin-bottom: 2.5rem;
	}

	.cta-center {
		text-align: center;
	}

	@media (min-width: 768px) {
		.section-header {
			margin-bottom: 4rem;
		}

		.gallery {
			margin-bottom: 3rem;
		}
	}

	/* ====================================================== */
	/* RESPONSIVE ADJUSTMENTS */
	/* ====================================================== */

	@media (max-width: 640px) {
		.wrapper {
			width: 92%;
		}

		.hero-wrapper,
		.skills-wrapper,
		.projects-section,
		.why-wrapper {
			padding-block: 2.5rem;
		}

		.section-header {
			margin-bottom: 2rem;
		}

		.gallery {
			margin-bottom: 2rem;
		}
	}

	/* ====================================================== */
	/* DARK MODE */
	/* ====================================================== */

	:root.theme-dark .projects-section {
		background: var(--gray-999);
		border-top-color: var(--gray-800);
		border-bottom-color: var(--gray-800);
	}
</style>