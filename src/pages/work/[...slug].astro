---
import { type CollectionEntry, getCollection } from 'astro:content';

import BaseLayout from '../../layouts/BaseLayout.astro';

import ContactCTA from '../../components/ContactCTA.astro';
import Hero from '../../components/Hero.astro';
import Icon from '../../components/Icon.astro';
import Pill from '../../components/Pill.astro';

interface Props {
	entry: CollectionEntry<'work'>;
}

// This is a dynamic route that generates a page for every Markdown file in src/content/
// Read more about dynamic routes and this `getStaticPaths` function in the Astro docs:
// https://docs.astro.build/en/core-concepts/routing/#dynamic-routes
export async function getStaticPaths() {
	const work = await getCollection('work');
	return work.map((entry) => ({
		params: { slug: entry.slug },
		props: { entry },
	}));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout title={entry.data.title} description={entry.data.description}>
	<div class="stack gap-20">
		<div class="stack gap-15">
			<header class="project-header">
				<div class="wrapper">
					<a class="back-link" href="/Portfolio/work/">
					<Icon icon="arrow-left" /> Projets
					</a>

					<div class="hero-content">
					<Hero title={entry.data.title} align="start">
						<p class="description">{entry.data.description}</p>
					</Hero>

					<div class="actions-row">
						<div class="tags">
						{entry.data.tags.map((t) => <Pill>{t}</Pill>)}
						</div>

						{entry.data.projectUrl && (
						<div class="visit-project">
							<a href={entry.data.projectUrl} target="_blank" rel="noopener noreferrer">
							Visiter le projet
							</a>
						</div>
						)}
					</div>
					</div>
				</div>
			</header>


			<main class="wrapper">
				<div class="stack gap-10 content">
					<div class="content">
						<Content />
					</div>
				</div>
			</main>
		</div>
		<ContactCTA />
	</div>
</BaseLayout>

<style>
/* ==============================
   Header / Hero
   ============================== */
header {
  padding-bottom: 3rem;
  border-bottom: 1px solid var(--gray-800);
}

.back-link {
  display: none;
  margin-bottom: 1rem;
  color: var(--link-color);
  font-weight: 500;
}

.hero-content {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  max-width: 100%; /* permet de ne jamais dépasser l'écran */
  margin-inline: auto;
  padding-inline: 1rem; /* padding latéral pour mobile */
}

.description {
  font-size: clamp(1rem, 4vw, 1.8rem);
  line-height: 1.6;
  text-align: center;
  max-width: 100%; /* jamais dépasser l'écran */
  word-wrap: break-word; /* casse le texte si trop long */
}

.actions-row {
  display: flex;
  flex-direction: column; /* vertical sur mobile */
  justify-content: center;
  align-items: center;
  gap: 1rem;
  width: 100%;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 0.75rem;
}

.visit-project {
  margin-top: 2rem;
}

.visit-project a {
  display: inline-block;
  padding: 0.85rem 2rem;
  font-size: clamp(1rem, 1.2vw + 0.5rem, 1.25rem);
  font-weight: 600;
  color: var(--accent-text-over);
  background: var(--gradient-accent);
  border-radius: 1rem;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  text-decoration: none;
}

.visit-project a:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

/* ==============================
   Main Content
   ============================== */
.content {
  max-width: 1000px;
  margin-inline: auto;
  padding: 1rem;
}

.content > :global(* + *) {
  margin-top: 1.5rem;
}

.content :global(h1),
.content :global(h2),
.content :global(h3),
.content :global(h4),
.content :global(h5) {
  margin: 2rem 0 1rem;
  line-height: 1.2;
}

.content :global(p) {
  font-size: clamp(1rem, 1.5vw + 0.5rem, 1.35rem);
  line-height: 1.7;
  color: var(--gray-300);
}

.content :global(img) {
  width: 100%;
  max-width: 100%;
  border-radius: 1.5rem;
  box-shadow: var(--shadow-sm);
  background: var(--gradient-subtle);
  border: 1px solid var(--gray-800);
  object-fit: cover;
}

.content :global(blockquote) {
  font-size: clamp(1.1rem, 1.3vw + 0.5rem, 1.6rem);
  font-family: var(--font-brand);
  font-weight: 600;
  line-height: 1.3;
  padding-inline-start: 1.5rem;
  border-inline-start: 0.25rem solid var(--accent-dark);
  color: var(--gray-0);
  margin: 1.5rem 0;
}

.content :global(video),
.content :global(iframe) {
  width: 100%;
  max-width: 100%;
  height: auto;
}

/* ==============================
   Media Queries
   ============================== */
@media (min-width: 50em) {
  .back-link {
    display: block;
  }

  .description {
    font-size: 1.35rem;
    text-align: left;
  }

  .hero-content {
    gap: 2rem;
  }

  .actions-row {
    flex-direction: row; /* horizontal sur desktop */
    justify-content: space-between;
    align-items: center;
    flex-wrap: nowrap;
  }

  .tags {
    justify-content: flex-start;
  }

  .visit-project {
    margin-top: 0;
  }

  .content {
    padding: 0;
  }
}

@media (min-width: 80em) {
  .description {
    font-size: 1.5rem;
  }

  .visit-project a {
    font-size: 1.25rem;
    padding: 1rem 2.25rem;
  }
}
</style>
